{
  "compilerOptions": {
    "baseUrl": "/src",
    "target": "es2020",
    "strict": false,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
